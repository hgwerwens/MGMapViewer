<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mg.mapviewer"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="0.9.1">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <uses-feature android:name="android.hardware.location.gps" />
    <uses-feature
        android:name="android.hardware.sensor.barometer"
        android:required="false" />

    <!-- uses-sdk android:targetSdkVersion="26" / -->

    <application
        android:name="mg.mapviewer.MGMapApplication"
        android:allowBackup="true"
        android:icon="@drawable/mg_map"
        android:label="MGMapViewer"
        android:requestLegacyExternalStorage="true" >

        <activity
            android:name="mg.mapviewer.MGMapActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <!-- 23.10.2018 MG: intent-filter for files must have host tag, then it filters on pathPattern (not only on mimeType) -->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="*" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\.gpx" />
                <data android:scheme="content" />
            </intent-filter>
            <intent-filter>
                <!-- 23.10.2018 MG: intent-filter for email appendix must not have host tag, then it filters on mimeType -->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="application/octet-stream" />
                <data android:mimeType="application/gpx" />
                <data android:mimeType="application/gpx+xml" />
                <data android:mimeType="text/xml" />
                <data android:scheme="content" />
            </intent-filter>
            <intent-filter>
                <!-- 20.08.2020 MG: intent-filter for map download -->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="mf-v4-map" />
            </intent-filter>
            <intent-filter>
                <!-- 20.08.2020 MG: intent-filter for map download -->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="mf-theme" />
            </intent-filter>
        </activity>
        <activity
            android:name="mg.mapviewer.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings"
            android:parentActivityName="mg.mapviewer.MGMapActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mg.mapviewer.MGMapActivity" />
        </activity>
        <activity
            android:name="mg.mapviewer.TrackStatisticActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Track Selection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mg.mapviewer.MGMapActivity" />
        </activity>
        <activity
            android:name="mg.mapviewer.ThemeSettings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Theme_Settings"
            android:parentActivityName="mg.mapviewer.MGMapActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mg.mapviewer.MGMapActivity" />
        </activity>
        <activity
            android:name="mg.mapviewer.HeightProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Height Profile"
            android:parentActivityName="mg.mapviewer.MGMapActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mg.mapviewer.MGMapActivity" />
        </activity>

        <service
            android:name="mg.mapviewer.TrackLoggerService"
            android:exported="false"
            android:foregroundServiceType="location" />
        <service
            android:name="mg.mapviewer.BgJobService"
            android:exported="false"/>
    </application>

</manifest>
